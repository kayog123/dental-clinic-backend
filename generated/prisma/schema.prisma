generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserAccountType {
  DENTIST
  PATIENT
}

model User {
  userId       String          @id @default(cuid()) //cognito sub/user_id
  email        String          @unique
  firstName    String?
  lastName     String?
  profileImage String?
  accountType  UserAccountType @default(PATIENT)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}
